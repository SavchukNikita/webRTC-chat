{
	"ts-node": {
		"allowJs": true,
		"transpileOnly": true,
		"ignore": [
			"!@dns-modules/*"
		],
		"compilerOptions": {
			"skipLibCheck": true
		}
	},
	"include": [
		"declare/*.d.ts",
		"src/**/*",
		"src/**/*.vue"
	],
	"compilerOptions": {
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"strictNullChecks": true,
		"target": "es2015",
		"module": "commonjs",
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
	}
}
